@model GamersAddict.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Mot de passe oublié ?";
}

<div class="centered-box" style="width: 460px; text-align: center;">
    <h2>@ViewBag.Title</h2>
    <div>
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "pure-form", role = "form" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary("", new { @class = "text-danger" })

            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Votre Email" })
            <input type="submit" class="pure-button pure-button-primary" value="Envoyer" />
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    body {
        background: #eee;
    }
</style>