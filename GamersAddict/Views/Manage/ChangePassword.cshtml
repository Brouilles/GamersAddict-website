@model GamersAddict.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Changer le mot de passe";
}

<div class="page-content-header pure-g">
    <div class="pure-u-1-2">
        <h1 class="page-content-title">@ViewBag.Title</h1>
    </div>

    <div class="pure-u-1-2" style="margin-top: 2em; text-align: right;">
        <div class="pure-menu pure-menu-horizontal">
            <ul class="pure-menu-list">
                <li class="pure-menu-item">@Html.ActionLink("Retour sur mon profil", "Index", "Manage", null, new { @class = "pure-button pure-button-primary" })</li>
            </ul>
        </div>
    </div>
</div>

<div class="page-content-body">
    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "pure-form", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Formulaire de changement de mot de passe</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div style="margin-top: 10px;" class="pure-g">
            <div class="pure-u-1-1 pure-u-sm-1-1 pure-u-md-4-24">@Html.LabelFor(m => m.OldPassword, new { style = "line-height: 36.4px;" })</div>
            <div class="pure-u-1-1 pure-u-sm-1-1 pure-u-md-10-24">@Html.PasswordFor(m => m.OldPassword, new { style = "width: 100%;" })</div>
        </div>
        <div style="margin-top: 10px;" class="pure-g">
            <div class="pure-u-1-1 pure-u-sm-1-1 pure-u-md-4-24">@Html.LabelFor(m => m.NewPassword, new { style = "line-height: 36.4px;" })</div>
            <div class="pure-u-1-1 pure-u-sm-1-1 pure-u-md-10-24">@Html.PasswordFor(m => m.NewPassword, new { style = "width: 100%;" })</div>
        </div>
        <div style="margin-top: 10px;" class="pure-g">
            <div class="pure-u-1-1 pure-u-sm-1-1 pure-u-md-4-24">@Html.LabelFor(m => m.ConfirmPassword, new { style = "line-height: 36.4px;" })</div>
            <div class="pure-u-1-1 pure-u-sm-1-1 pure-u-md-10-24">@Html.PasswordFor(m => m.ConfirmPassword, new { style = "width: 100%;" })</div>
        </div>
        <div style="margin-top: 6px;">
            <input type="submit" value="Changer le mot de passe" class="pure-button pure-button-primary" />
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}